{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/musickit-typescript",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/main/**/*",
  ]
}
